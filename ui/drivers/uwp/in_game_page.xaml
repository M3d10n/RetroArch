<Page x:Name="page"
    x:Class="RetroArch_Win10.in_game_page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RetroArch_Win10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Hidden" Closing="CommandBarClosing" IsSticky="True">
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="ResetButton" Label="reset" Icon="Previous" Click="ResetClick"/>
            <AppBarButton x:Name="ResumeButton" Label="resume" Icon="Play" Click="ResumeClicked"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid/>
</Page>
